    <div style="display:flex; align-items:center; margin-top:8px">
      <span style="display:inline-block; width:50px;height:50px; background:#F8B573"></span><span style="margin-left:8px; color:#F8B573;">#F8B573 Secondary Color </span>
    </div>
{% endblock %}